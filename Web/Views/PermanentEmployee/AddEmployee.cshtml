@model PayCalc.ClassLibrary.Models.PermanentEmployee
@{
    ViewData["Title"] = "Add Permanent Employee";
}
<div class="text-center">
    <h1 class="display-4">Add Permanent Employee</h1>

    <form asp-action="AddEmployee" method="post" role="form">
        <div class="form-group">
            <label asp-for="FirstName" class="form-label">First Name</label>
            <input asp-for="FirstName" class="form-control" placeholder="First Name">
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="form-label">Last Name</label>
            <input asp-for="LastName" class="form-control" placeholder="Last Name">
        </div>
        <div class="form-group">
            <label asp-for="Salary" class="form-label">Salary</label>
            <input asp-for="Salary" class="form-control" placeholder="Salary">
        </div>
        <div class="form-group">
            <label asp-for="Bonus" class="form-label"> Bonus</label>
            <input asp-for="Bonus" class="form-control" placeholder="Bonus">
        </div>
        <div class="form-group">
            <label asp-for="StartDate" class="form-label">Start Date</label>
            <input asp-for="StartDate" class="form-control" placeholder="Start Date">
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="AddEmployee"/>
        </div>
    </form>
</div>